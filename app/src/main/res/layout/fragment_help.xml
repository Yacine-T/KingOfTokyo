<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/help"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layout.HelpFragment" >

    <ImageView
        android:id="@+id/bg_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_main"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/help_link"
        android:layout_width="276dp"
        android:layout_height="233dp"
        android:autoLink="web"
        android:background="@color/primary"
        android:fontFamily="@font/bangers"
        android:linksClickable="true"
        android:text="@string/clique"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_help"
        app:layout_constraintEnd_toEndOf="@+id/bg_help"
        app:layout_constraintStart_toStartOf="@+id/bg_help"
        app:layout_constraintTop_toTopOf="@+id/bg_help" />

    <Button
        android:id="@+id/help_back_to_menu_btn"
        android:layout_width="184dp"
        android:layout_height="53dp"
        android:fontFamily="@font/bangers"
        android:text="Retour"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/help_link"
        app:layout_constraintVertical_bias="0.321" />

</androidx.constraintlayout.widget.ConstraintLayout>